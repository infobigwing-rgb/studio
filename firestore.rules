/**
 * @fileOverview Firestore Security Rules for Remian Edit Studio.
 *
 * Core Philosophy:
 * This ruleset prioritizes strict authorization based on user ownership and role-based access,
 * while maintaining flexibility in data shapes for rapid prototyping.  It avoids complex
 * `get()` calls by denormalizing access control data directly onto documents.
 *
 * Data Structure:
 * - /users/{userId}: User profiles, accessible only to the user themselves.
 * - /templates/{templateId}: Public templates, write-protected for non-admin users.
 * - /projects/{projectId}: Collaborative projects with access controlled by a 'collaborators' map.
 * - /renders/{renderId}: Render jobs, accessible to project owners or collaborators.
 *
 * Key Security Decisions:
 * - User data is strictly private; no user listing is allowed.
 * - Templates are publicly readable but not writable except by authorized users (not modeled explicitly).
 * - All write operations require explicit authorization checks.
 *
 * Denormalization for Authorization:
 * - The `projects` collection uses a `collaborators` map to store user roles directly within the
 *   project document. This eliminates the need for complex lookups in security rules and makes
 *   access control more efficient.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-only access to their own profile data.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their own profile.
     * @allow (get) User with ID 'user123' can read their own profile.
     * @allow (update) User with ID 'user123' can update their own profile.
     * @allow (delete) User with ID 'user123' can delete their own profile.
     * @deny (create) User with ID 'user456' cannot create a profile for 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && resource.data.id == request.resource.data.id;
      allow delete: if isOwner(userId);
    }

    /**
     * @description Allows public read access to templates, but restricts write access.
     * @path /templates/{templateId}
     * @allow (get) Any user can read template 'template123'.
     * @allow (list) Any user can list all templates.
     * @deny (create) Non-admin user cannot create a new template.
     * @principle Allows public read, restricts writes to authorized users (admins - not modeled here).
     */
    match /templates/{templateId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Add admin validation once roles are established.
      allow update: if false; // TODO: Add admin validation once roles are established.
      allow delete: if false; // TODO: Add admin validation once roles are established.
    }

    /**
     * @description Manages access to project documents based on collaborators.
     * @path /projects/{projectId}
     * @allow (create) User with ID 'user123' can create a project.  The creator is implicitly a collaborator.
     * @allow (get) User with ID 'user456' can read project 'project789' if 'user456' is in the 'collaborators' map.
     * @allow (update) User with ID 'user456' can update project 'project789' if 'user456' is in the 'collaborators' map.
     * @allow (delete) User with ID 'user456' can delete project 'project789' if 'user456' is in the 'collaborators' map.
     * @deny (get) User with ID 'user789' cannot read project 'project789' if 'user789' is NOT in the 'collaborators' map.
     * @principle Enforces collaborative access via the 'collaborators' map.
     */
    match /projects/{projectId} {
      function isCollaborator(collaborators) {
        return request.auth.uid in collaborators;
      }
      allow get: if request.auth != null && isCollaborator(resource.data.collaborators);
      allow list: if request.auth != null; // Listing needs additional filtering in the application to only show relevant projects
      allow create: if request.auth != null;
      allow update: if request.auth != null && isCollaborator(resource.data.collaborators) && resource != null;
      allow delete: if request.auth != null && isCollaborator(resource.data.collaborators) && resource != null;
    }

    /**
     * @description Restricts access to render jobs to project owners or collaborators.
     * @path /renders/{renderId}
     * @allow (get) User with ID 'user456' can read render job 'render123' if 'user456' is a collaborator on the associated project.
     * @deny (create) User without authorization cannot create a render job.
     * @principle Ensures that only authorized users can manage render jobs.
     */
    match /renders/{renderId} {
            function getProjectId() {
        return resource.data.projectId;
      }

      function isProjectCollaborator(projectId) {
        return get(/databases/$(database)/documents/projects/$(projectId)).data.collaborators[request.auth.uid] != null;
      }

      allow get: if request.auth != null && isProjectCollaborator(getProjectId());
      allow list: if false; // Listing all render jobs is not permitted.  Access must be project-specific.
      allow create: if request.auth != null && isProjectCollaborator(request.resource.data.projectId);
      allow update: if request.auth != null && isProjectCollaborator(getProjectId()) && resource != null;
      allow delete: if request.auth != null && isProjectCollaborator(getProjectId()) && resource != null;
    }
  }
}